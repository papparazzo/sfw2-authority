<div class="modal-content">
    <div class="modal-header sfw2-no-border">
        <h1 class="modal-title fs-5">Anmelden</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <form id="sfw2-login-form">
            <div class="row">
                <label for="sfw2-login-input-user" class="col-sm-4 col-form-label text-body-secondary">Benutzername</label>
                <div class="col-sm-7">
                    <input
                        id="sfw2-login-input-user"
                        type="text"
                        class="form-control form-control-sm"
                        name="usr"
                        value=""
                    />
                    <div class="invalid-feedback"></div>
                </div>
            </div>
            <div class="row">
                <label for="sfw2-login-input-password" class="col-sm-4 col-form-label text-body-secondary">Passwort</label>
                <div class="col-sm-7">
                    <input
                        id="sfw2-login-input-password"
                        type="password"
                        class="form-control form-control-sm sfw2-submit-on-enter"
                        name="pwd"
                        value=""
                    />
                    <div class="invalid-feedback"></div>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer sfw2-no-border">
        <button
            type="button"
            class="btn btn-secondary sfw2-button-send"
            data-sfw2-form-id="#sfw2-login-form"
            data-sfw2-url="/authentication" {{!TODO No Hardlinks!}}
        >
            anmelden
        </button>
    </div>
</div>